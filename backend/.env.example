# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://127.0.0.1:27017/skillswap
ALLOW_LOCAL_MONGO=true

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Bcrypt
BCRYPT_SALT_ROUNDS=10

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Cookie Configuration
COOKIE_SECURE=false
COOKIE_DOMAIN=

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/oauth/google/callback/

# OAuth - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:5000/api/oauth/github/callback/

# OAuth Redirect
OAUTH_REDIRECT_URL=http://localhost:5173/auth/callback/

# Cloudinary (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Notifications (Required for RV Verification OTP)
EMAIL_ENABLED=true
EMAIL_PROVIDER=sendgrid   # Options: sendgrid | nodemailer
EMAIL_FROM=noreply@skillsync.com

# SendGrid Configuration (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# Nodemailer Configuration (if EMAIL_PROVIDER=nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Machine Learning
ML_SKILL_RECOMMENDATION_ENABLED=true
ML_MENTOR_RECOMMENDATION_ENABLED=true
ML_SESSION_PREDICTION_ENABLED=true
LOG_LEVEL=info

# Video Calls (Jitsi)
JITSI_BASE_URL=https://meet.jit.si

# Socket.io
SOCKET_IO_CORS_ORIGIN=http://localhost:5173
